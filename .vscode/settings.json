{
  // linters
  "flake8.args": [
      "--max-line-length=100",
      "--max-complexity=18",
      "--ignore=E203,F266,F704,W503,B905,B907",
      "--select=B,C,E,F,W,T4,B9",
  ],

  "mypy-type-checker.args": [
      "--config-file=${workspaceFolder}/tlparser/pyproject.toml",
  ],

  // formatters
  "black-formatter.args": [
      "--config=${workspaceFolder}/tlparser/pyproject.toml"
  ],
  "black-formatter.path": [
      "black"          // black in path (23.9.1 in my case)
  ],

  "isort.args": [
      "--settings-file=${workspaceFolder}/tlparser/pyproject.toml"
  ],
}
